@{
    ViewBag.Title = "Feedbacks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using EpamBlog.Models
@model IEnumerable<Feedback>

    <div class="feedback-container">
        @foreach (Feedback currentFeedback in Model )
        {
            <div class="feedback Article">
                <h4>Author: @currentFeedback.Author</h4>
                <div class="feedback-text">
                    @currentFeedback.Text
                </div>
                <p>Date: @currentFeedback.Published</p>
            </div>
        }
    </div>


@using (Html.BeginForm("AddFeedback", "Feedback", FormMethod.Post))
{
     <div class="feedback-form" id="feedback-anchor">
        <input type="text" name="Author" placeholder="Enter your name" />
        <textarea name="Text" cols="40" rows="5" placeholder="Enter your feedback here"></textarea>
        <button type="submit" name="sent-feedback">Sent</button>
    </div> 
}
