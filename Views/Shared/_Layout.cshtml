@using EpamBlog.Helpers;
@using EpamBlog.Models.QuizModels;
@using EpamBlog.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css") 

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
</head>
<body>
    <div class="page-header" id="back-to-top">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="container body-content">
        <div class="menu-body">
            <ul class="links">
                <li>@Html.ActionLink( "Home", "Index", "Home" )</li>
                <li>@Html.ActionLink( "Feedback", "Index", "Feedback" )</li>
                <li>@Html.ActionLink( "Quiz", "Index", "Quiz" )</li>
                <li>@Html.ActionLink( "Add Article", "Index", "Admin" )</li>
            </ul>
            @if ( ViewBag.IsHome != null )
            {
                <div class="menu-body-quiz">
                    @Html.Partial( "StatisticPartialView", new StatisticViewModel() )
                </div>
            }
            <div class="similar-articles">
                @if ( ViewBag.SimilarArticles != null)
                {
                    <h5>Similar articles</h5>
                    <ul>
                        @foreach ( Article item in ViewBag.SimilarArticles )
                        {
                            <li>@Html.ActionLink( item.Title, "ReadArticle/" + item.Id, "Home" )</li>
                        }
                    </ul>
                }
            </div>

        </div>
        @RenderBody()
        <footer>
            <hr />
            <p> Copyright &copy; @DateTime.Now.Year - MyBlog. All rights reserved.</p>
            <a href="#back-to-top">Back to top</a>
        </footer>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>
